@model CartPageVM
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    Odemeniz gereken toplam tutuar=> @Model.Cart.TotalPrice.. Siparişi Onaylamak için Lütfen @Html.ActionLink("Tıklayınız", "SiparisiOnayla")
</div>

<div class="row product-list">
    @foreach (CartItem item in Model.Cart.Sepetim)
    {
        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">
                    @if (item.ImagePath == null)
                    {
                        <img src="~/OuterTools/img/product-list/pro-1.jpg" alt="Resim bulunamadı" width="100" height="300" title="@item.Name" />
                    }
                    else
                    {
                        <img src="@item.ImagePath" alt="Resim yok" width="100" height="300" title="@item.Name" />
                    }
                    <a href="@Url.Action("DeleteFromCart",new { id=item.ID})">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>
                <div class="panel-body text-center">
                    <h4>
                        <a href="#" class="pro-title">
                            @item.Name x @item.Amount
                        </a>
                    </h4>
                    <p class="price">$@item.SubTotal</p>
                </div>
            </section>
        </div>
    }
</div>

