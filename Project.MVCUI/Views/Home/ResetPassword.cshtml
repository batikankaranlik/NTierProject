@model AppUserVM
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
{





<section>
    @Html.HiddenFor(x => x.AppUser.ActivationCode)
    <div class="panel panel-primary">
        <div class="panel-heading"> Şifre Sıfırlama</div>
        <div class="panel-body">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-2 control-label">Şifre giriniz</label>
                    <div class="col-lg-10">
                        @Html.PasswordFor(x => x.AppUser.Password, new { @class = "login__input" })
                        @Html.ValidationMessageFor(x => x.AppUser.Password)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">şifreyi tekrar giriniz</label>
                    <div class="col-lg-10">
                        @Html.PasswordFor(x => x.AppUser.ConfirmPassword, new { @class = "login__input" })
                        @Html.ValidationMessageFor(x => x.AppUser.ConfirmPassword)
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-info">Şifre yenile</button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
}

