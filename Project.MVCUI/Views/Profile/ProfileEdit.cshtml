@model AppUserVM
@{
    ViewBag.Title = "ProfileEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

    @Html.HiddenFor(x => x.AppUser.ID)



    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <aside class="profile-nav col-lg-3">
                <section class="panel">
                    <div class="user-heading round">
                        <a href="#">
                            <img src="~/Pictures/blank-profile-picture-973460_640.png" />
                            
                        </a>
                        <h1>@Model.AppUser.UserName</h1>
                        <p>@Model.AppUser.Email</p>
                    </div>

                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="@Url.Action("ProfilePage","Profile")"> <i class="icon-user"></i> Profile</a></li>
                        <li><a href="@Url.Action("Orders","Order",new {id=Model.AppUser.ID })"> <i class="icon-edit"></i> sipariş</a></li>

                        <li class="active"><a href="" @Url.Action("ProfileEdit", new { id = Model.AppUser.ID }) ""> <i class="icon-edit"></i> Profil bilgilerini güncelle</a></li>
                    </ul>

                </section>
            </aside>
            <aside class="profile-info col-lg-9">
                <section class="panel">
                    <div class="panel-body bio-graph-info">
                        <h1> Profile </h1>
                        <form class="form-horizontal" role="form">
                            @if (TempData["sifre"] != null)
                            {
                                <div class="alert alert-info alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>

                                    @TempData["sifre"]
                                </div>
                            }


                            <div class="form-group">
                                <label class="col-lg-2 control-label">First Name</label>
                                <div class="col-lg-10">
                                    @Html.TextBoxFor(x => x.AppUser.Profile.FirstName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Last Name</label>
                                <div class="col-lg-10">
                                    @Html.TextBoxFor(x => x.AppUser.Profile.LastName, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Adres</label>
                                <div class="col-lg-10">
                                    @Html.TextAreaFor(x => x.AppUser.Profile.Address, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Şifre</label>
                                <div class="col-lg-10">
                                    @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AppUser.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Şifre tekrar</label>
                                <div class="col-lg-10">
                                    @Html.PasswordFor(x => x.AppUser.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.AppUser.ConfirmPassword)
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button type="submit" formnovalidate="formnovalidate" class="btn btn-success">Kaydet</button>

                                    <button type="button"> @Html.ActionLink("Şifre sıfırlamak", "ResPasswordMailSend", "Home", "", new { @class = "btn btn-danger" }) </button>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-danger">
                                    @Html.ActionLink("Hesabı sil", "MailSend", new { @class = "btn btn-danger" })
                                </div>
                            </div>
                        </form>
                    </div>
                </section>

            </aside>
        </div>

        <!-- page end-->
    </section>
}


