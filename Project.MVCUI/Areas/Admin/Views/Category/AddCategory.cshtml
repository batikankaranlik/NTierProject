@model CategoryVM
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    genislik{
        width:300px;
    }
</style>
@using (Html.BeginForm()) 
{ 

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Kategori ekleme
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Isim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x=>x.Category.CategoryName)
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
                            @Html.ValidationMessageFor(x => x.Category.Description)
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Ekle</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Kategori Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

}

