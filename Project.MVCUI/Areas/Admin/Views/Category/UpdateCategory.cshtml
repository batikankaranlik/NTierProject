@model CategoryVM
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.Category.ID)
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Güncelleme
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Isim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">Ekle</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Kategori Güncelle
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

}

